### âš¡ **3. Supercharged JavaScript (script.js)**
```javascript
// Data
const certifications = [
{ 
name: "CompTIA Security+", 
issuer: "CompTIA",
icon: "fas fa-shield-alt"
},
{ 
name: "Cisco CCNA", 
issuer: "Cisco",
icon: "fas fa-network-wired"
},
// Add other certs...
];

const projects = [
{
title: "E-Commerce Security Assessment",
description: "Conducted OWASP Top 10 scan for online retailer.",
outcome: "Identified 3 critical vulnerabilities including SQLi.",
image: "images/project1-thumb.jpg",
fullImage: "images/project1-full.jpg"
},
// Add other projects...
];

// DOM Loaded
document.addEventListener('DOMContentLoaded', () => {
loadCertifications();
loadProjects();
setupModal();
setupDarkMode();
});

// Load Certifications
function loadCertifications() {
const container = document.getElementById('certs-container');

certifications.forEach(cert => {
container.innerHTML += `
<div class="card cert-card">
<i class="${cert.icon} fa-3x"></i>
<h3>${cert.name}</h3>
<p>${cert.issuer}</p>
</div>
`;
});
}

// Load Projects
function loadProjects() {
const container = document.getElementById('projects-container');

projects.forEach(project => {
container.innerHTML += `
<div class="card project-card">
<img src="${project.image}" alt="${project.title}" class="project-img">
<h3>${project.title}</h3>
<p>${project.description}</p>
<p class="outcome"><strong>Outcome:</strong> ${project.outcome}</p>
</div>
`;
});
}

// Image Modal
function setupModal() {
const modal = document.getElementById("imageModal");
const modalImg = document.getElementById("modalImage");
const captionText = document.getElementById("caption");
const closeBtn = document.querySelector(".close");

document.querySelectorAll('.project-img').forEach(img => {
img.addEventListener('click', function() {
modal.style.display = "block";
modalImg.src = this.src.replace('-thumb', '-full');
captionText.innerHTML = this.alt;
});
});

closeBtn.onclick = function() { 
modal.style.display = "none";
}

window.onclick = function(event) {
if (event.target == modal) {
modal.style.display = "none";
}
}
}

// Dark Mode Toggle
function setupDarkMode() {
const toggle = document.getElementById('darkModeToggle');
const icon = toggle.querySelector('i');

toggle.addEventListener('click', () => {
document.body.classList.toggle('dark-mode');

if (document.body.classList.contains('dark-mode')) {
icon.classList.replace('fa-moon', 'fa-sun');
} else {
icon.classList.replace('fa-sun', 'fa-moon');
}
});
}
```
